│   └── lib/                  // Custom libraries or third-party dependencies
│       └── sensors/
│           └── dht_sensor.h
│           └── dht_sensor.cpp
├── backend/                  // Server-side code (if applicable, for web server/API)
│   ├── app.py                // Flask/Node.js server code
│   ├── requirements.txt      // Python dependencies (if Flask)
│   ├── package.json          // Node.js dependencies (if Node.js)
│   └── database.py           // Database interaction functions
├── frontend/                 // Web application code
│   ├── index.html            // Main HTML file
│   ├── style.css             // CSS for styling
│   ├── script.js             // JavaScript for UI interaction and API calls
│   └── assets/               // Images, icons, etc.
├── voice_assistant_integration/ // Configuration and webhook code for voice assistant
│   ├── google_actions_config.json // Configuration for Actions on Google
│   └── alexa_skill_lambda.py // AWS Lambda function for Alexa Skill
├── CAD/                      // Optional: 3D models for enclosures (if any)
